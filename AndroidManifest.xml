<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atuts.tamilocr"
    android:versionCode="1"
    android:versionName="1.0" >
	<supports-screens
			android:smallScreens="true"
				android:normalScreens="true"
				android:largeScreens= "true"
				android:anyDensity="true"
		/>
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tamil"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.atuts.tamilocr.MainActivity"
            android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--  Gallery Activity -->
        <activity android:name=".GalleryActivity" android:screenOrientation="portrait"/>
         
        <!--  Camera Activity -->
        <activity android:name=".CameraActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>